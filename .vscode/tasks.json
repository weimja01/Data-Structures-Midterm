{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ compile for debug",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/game.cpp",
                "-o",
                "${workspaceFolder}/oregontrail.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}